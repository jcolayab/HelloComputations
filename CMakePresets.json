{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Build",
      "description": "Use default settings with debug info",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Optimized build for performance",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "test",
      "displayName": "Test Build",
      "description": "Build with unit tests enabled",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/test",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON"
      }
    },
        {
      "name": "coverage",
      "displayName": "Coverage Build",
      "description": "Build with coverage instrumentation for Catch2 tests",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/coverage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CODE_COVERAGE": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "hidden": false
    }
  ],
  
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
     {
      "name": "coverage-build",
      "configurePreset": "coverage",
      "targets": ["test_runner"],
      "hidden": false

    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "test",
      "configurePreset": "test"
    },
    {
      "name": "coverage-test",
      "configurePreset": "coverage",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}